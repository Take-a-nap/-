<!DOCTYPE html>
<html>
  <head>
    <title>豆瓣管理系统</title>
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css' />
    <link rel='stylesheet' href='/stylesheets/ionicons.min.css' />
    <link rel='stylesheet' href='/admin-lte/dist/css/AdminLTE.css' />
    <link rel='stylesheet' href='/admin-lte/dist/css/skins/skin-blue.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <%- include('./header') %>
    <%- include('./menu') %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          <!--<small>Optional description</small>-->
        </h1>
        <!--<ol class="breadcrumb">-->
          <!--<li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>-->
          <!--<li class="active">Here</li>-->
        <!--</ol>-->
      </section>
      <!-- Main content -->
      <section class="content">
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">添加电影</h3>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <form class="form-horizontal" action="/movieAddAction" method="post">
            <div class="box-body">
              <div class="form-group">
                <label for="id" class="col-sm-2 control-label">电影标识</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" id="id" name="id" placeholder="id">
                </div>
              </div>
              <div class="form-group">
                <label for="title" class="col-sm-2 control-label">电影名称</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" id="title" name="title" placeholder="title">
                </div>
              </div>
              <div class="form-group">
                <label for="average" class="col-sm-2 control-label">电影评分</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" name="average" id="average" placeholder="average">
                </div>
              </div>
              <div class="form-group">
                <label for="year" class="col-sm-2 control-label">上映时间</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" id="year" name="year" placeholder="year">
                </div>
              </div>
              <div class="form-group">
                <label for="subtype" class="col-sm-2 control-label">电影类型</label>

                <div class="col-sm-10">
                  <input type="radio" name="subtype" value="movie" id="subtype01" checked><label for="subtype01">movie</label>
                  <input type="radio" name="subtype" value="tv" id="subtype02"><label for="subtype02">tv</label>
                </div>
              </div>
              <div class="form-group">
                <label for="original_title" class="col-sm-2 control-label">电影原名</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" name="original_title" id="original_title" placeholder="original_title">
                </div>
              </div>
              <div class="form-group">
                <label for="collect_count" class="col-sm-2 control-label">电影票房</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" id="collect_count" name="collect_count" placeholder="collect_count">
                </div>
              </div>
              <div class="form-group">
                <label for="genres" class="col-sm-2 control-label">电影类型</label>

                <div class="col-sm-10">
                  <input type="checkbox" name="genres" value="剧情" id="genres01"><label for="genres01">剧情</label>
                  <input type="checkbox" name="genres" value="奇幻" id="genres02"><label for="genres02">奇幻</label>
                  <input type="checkbox" name="genres" value="悬疑" id="genres03"><label for="genres03">悬疑</label>
                  <input type="checkbox" name="genres" value="喜剧" id="genres04"><label for="genres04">喜剧</label>
                  <input type="checkbox" name="genres" value="科幻" id="genres05"><label for="genres05">科幻</label>
                  <input type="checkbox" name="genres" value="爱情" id="genres06"><label for="genres06">爱情</label>
                  <input type="checkbox" name="genres" value="战争" id="genres07"><label for="genres07">战争</label>
                  <input type="checkbox" name="genres" value="犯罪" id="genres08"><label for="genres08">犯罪</label>
                  <input type="checkbox" name="genres" value="冒险" id="genres09"><label for="genres09">冒险</label>
                  <input type="checkbox" name="genres" value="儿童" id="genres10"><label for="genres10">儿童</label>
                  <input type="checkbox" name="genres" value="动画" id="genres11"><label for="genres11">动画</label>
                  <input type="checkbox" name="genres" value="历史" id="genres12"><label for="genres11">历史</label>
                  <input type="checkbox" name="genres" value="灾难" id="genres13"><label for="genres11">灾难</label>
                </div>
              </div>
              <div class="form-group">
                <label for="casts" class="col-sm-2 control-label">演员</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" id="casts" name="casts" placeholder="写入演员ID，以逗号隔开">
                </div>
              </div>
              <div class="form-group">
                <label for="directorsList" class="col-sm-2 control-label">导演</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" id="directorsList" name="directorsList" placeholder="写入导演ID，以逗号隔开">
                </div>
              </div>
              <div class="form-group">
                <label for="images" class="col-sm-2 control-label">电影图片</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" id="images" name="images" placeholder="images">
                </div>
              </div>
              <div class="form-group">
                <label for="alt" class="col-sm-2 control-label">alt</label>

                <div class="col-sm-10">
                  <input type="text" class="form-control" id="alt" name="alt" placeholder="alt">
                </div>
              </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
              <div class="form-group">
                <label for="alt" class="col-sm-2 control-label sr-only">alt</label>

                <div class="col-sm-10">
                  <button type="submit" class="btn btn-info">提交</button>
                </div>
              </div>

            </div>
            <!-- /.box-footer -->
          </form>
        </div>
        <!-- Your Page Content Here -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

      <%- include('./footer') %>

      <%- include('./other') %>

  </div>
  <!-- ./wrapper -->
  </body>
<script src="/javascripts/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script src="/javascripts/app.min.js"></script>
