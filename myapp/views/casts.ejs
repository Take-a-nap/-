<!DOCTYPE html>
<html>
  <head>
    <title>豆瓣管理系统</title>
    <meta name="referrer" content="no-referrer">
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css' />
    <link rel='stylesheet' href='/stylesheets/ionicons.min.css' />
    <link rel='stylesheet' href='/admin-lte/dist/css/AdminLTE.css' />
    <link rel='stylesheet' href='/admin-lte/dist/css/skins/skin-blue.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">

    <%- include('./header') %>
    <%- include('./menu') %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          <!--<small>Optional description</small>-->
        </h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
          <li class="active">Here</li>
        </ol>
      </section>
      <!-- Main content -->
      <section class="content">
        演员管理
        <!-- Your Page Content Here -->
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">演员首页</h3>
            <a href="castsPaging"> <button class="btn btn-success">添加演员</button></a>
            <a href="castsPaging?pageCode=<%= pageCode-2 %>&pageNum=5"> <button class="btn ">上一页</button></a>
            <span><input type="number" value="<%= pageCode %>" style="width: 50px;text-align: center" id="num"> / <%= totalNum %></span>
            <a href="castsPaging?pageCode=<%= pageCode %>&pageNum=5"> <button class="btn ">下一页</button></a>
            <div class="box-tools">
              <div class="input-group input-group-sm" style="width: 150px;">
                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                <div class="input-group-btn">
                  <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                </div>
              </div>
            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tbody><tr>
                <th>序号</th>
                <th>名字</th>
                <th>头像</th>
                <th>操作</th>
              </tr>
              <% for(var i=0;i<result.length;i++){ %>
              <tr>
                <td><%= (pageCode-1)*pageNum+i+1 %></td>
                <td><%= result[i].name %></td>
                <td><img src="<%= result[i].avatars.small %>" alt="" style="width:50px; height: 70px"></td>
                <td>
                  <button class="btn btn-xs btn-warning">编辑</button>
                </td>
              </tr>
              <% } %>
              </tbody></table>
          </div>
          <!-- /.box-body -->
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

      <%- include('./footer') %>

      <%- include('./other') %>

  </div>
  <!-- ./wrapper -->
  </body>
<script src="/javascripts/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script src="/javascripts/app.min.js"></script>
  <script>
      $('#menulist').find('li').eq(3).addClass('active')
  </script>
</html>
