                <label for="subtype" class="col-sm-2 control-label">添加文件</label>
                <div class="col-sm-10">

                    <label for="avatar">选择头像</label>
                    <input type="file" id="avatar" name="avatar">

                    <p class="help-block">请添加文件</p>

                </div>
              </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
              <div class="form-group">
                <label for="alt" class="col-sm-2 control-label sr-only">alt</label>

                <div class="col-sm-10">
                  <button type="submit" class="btn btn-info">提交</button>
                </div>
              </div>

            </div>
            <!-- /.box-footer -->
          </form>
        </div>
